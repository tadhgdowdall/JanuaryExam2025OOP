<Window x:Class="JanuaryExam2025OOP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JanuaryExam2025OOP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Events" HorizontalAlignment="Left" Margin="46,100,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lbxEvents" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="46,139,462,100"/>
        <TextBox x:Name="tblkSearch" HorizontalAlignment="Left" Margin="200,104,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="120"/>
        <Label Content="Tickets" HorizontalAlignment="Left" Margin="417,100,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lbxTickets" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="400,139,108,100"/>
        <Label Content="Number Of Tickets" HorizontalAlignment="Left" Margin="417,354,0,0" VerticalAlignment="Top" Width="105"/>
        <TextBox x:Name="tblkNumberOfTickets" HorizontalAlignment="Left" Margin="563,358,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnBook" Content="Book" HorizontalAlignment="Left" Margin="708,356,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
